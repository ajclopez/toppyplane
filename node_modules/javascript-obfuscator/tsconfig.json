{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "noEmitHelpers": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "plugins": [
      {
        "name": "tslint-language-service",
        "ignoreDefinitionFiles": true
      }
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}